<Window x:Class="LocalTTS.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LocalTTS Settings"
        Width="450"
        Height="580"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <!-- Docker Settings -->
            <TextBlock Text="Docker Settings" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Docker Image:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="DockerImageBox" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Port:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="PortBox" Margin="0,0,0,8" Width="80" HorizontalAlignment="Left"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Container Name:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="ContainerNameBox" Margin="0,0,0,8"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Voice:" VerticalAlignment="Center" Margin="0,0,0,8"/>
                <Grid Grid.Row="3"
                        Grid.Column="1"
                        Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                            x:Name="VoiceComboBox"
                            IsEditable="True"
                            Width="170"
                            HorizontalAlignment="Left"/>
                    <Button Grid.Column="1"
                            x:Name="VoicePreviewButton"
                            Content="Preview"
                            Margin="8,0,0,0"
                            Padding="10,2"
                            Click="OnPreviewVoice"/>
                </Grid>

                <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" x:Name="AutoStartBox"
                          Content="Auto-start container on launch" Margin="0,0,0,8"/>

                <CheckBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" x:Name="AutoStopBox"
                          Content="Auto-stop container on exit" Margin="0,0,0,8"/>
            </Grid>

            <!-- Reader View Settings -->
            <Separator Margin="0,8,0,16"/>
            <TextBlock Text="Reader View" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>

            <CheckBox x:Name="ShowReaderWindowBox" Content="Show reader window on hotkey" Margin="0,0,0,8"/>
            <CheckBox x:Name="ReaderAutoPlayBox" Content="Auto-play TTS when reader opens" Margin="0,0,0,8"/>
            <CheckBox x:Name="ReaderCloseOnFocusLossBox" Content="Close reader when it loses focus" Margin="0,0,0,8"/>
            <CheckBox x:Name="ReaderDarkModeBox" Content="Dark mode" Margin="0,0,0,12"/>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Font:" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" x:Name="ReaderFontBox" Width="150" HorizontalAlignment="Left">
                    <ComboBoxItem Content="Segoe UI"/>
                    <ComboBoxItem Content="Arial"/>
                    <ComboBoxItem Content="Calibri"/>
                    <ComboBoxItem Content="Consolas"/>
                    <ComboBoxItem Content="Georgia"/>
                    <ComboBoxItem Content="Times New Roman"/>
                    <ComboBoxItem Content="Verdana"/>
                </ComboBox>
            </Grid>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Font Size:" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBox x:Name="ReaderFontSizeBox" Width="50" Margin="0,0,8,0"/>
                    <TextBlock Text="(10-36)" VerticalAlignment="Center" Foreground="Gray"/>
                </StackPanel>
            </Grid>

            <!-- Buttons -->
            <Separator Margin="0,8,0,16"/>
            <TextBlock Text="General"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Margin="0,0,0,12"/>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                        Text="Log Level:"
                        VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1"
                        x:Name="LogLevelBox"
                        Width="120"
                        HorizontalAlignment="Left">
                    <ComboBoxItem Content="Debug"/>
                    <ComboBoxItem Content="Info"/>
                    <ComboBoxItem Content="Warn"/>
                    <ComboBoxItem Content="Error"/>
                </ComboBox>
            </Grid>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="Save" Width="80" Margin="0,0,8,0" Click="OnSave" IsDefault="True"/>
                <Button Content="Cancel" Width="80" Click="OnCancel" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
